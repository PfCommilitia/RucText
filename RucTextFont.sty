\ProvidesPackage{RucTextFont}

\RequirePackage{fontspec}
\RequirePackage[AutoFallBack, AutoFakeSlant, AutoFakeBold]{xeCJK}
\RequirePackage[math-style=ISO, bold-style=ISO, mathrm=sym]{unicode-math}

\setmainfont{EB Garamond}[
  FallBack = {FZShuSong-Z01},
  FallBack = {Source Han Serif SC},
  FallBack = {Symbols Nerd Font}
]

\setsansfont{Open Sans}[
  FallBack = {FZHei-B01},
  FallBack = {Sarasa Gothic SC},
  FallBack = {Symbols Nerd Font}
]

\setmonofont{Maple Mono}[
  FallBack = {FZHei-B01},
  FallBack = {Sarasa Gothic SC},
  FallBack = {Symbols Nerd Font Mono}
]

\setmathfont{STIX Two Math}[
  FallBack={FZShuSong-Z01},
  FallBack={Source Han Serif SC},
  FallBack={Symbols Nerd Font}
]

\setCJKmainfont[BoldFont={FZHei-B01}, ItalicFont={FZKai-Z03}]{FZShuSong-Z01}
\setCJKfallbackfamilyfont{\CJKrmdefault}[]{
  [BoldFont={Sarasa Gothic SC}] {Source Han Serif SC},
  [] {Symbols Nerd Font}
}

\setCJKsansfont{FZHei-B01}
\setCJKfallbackfamilyfont{\CJKsfdefault}[]{
  [] {Sarasa Gothic SC},
  [] {Symbols Nerd Font}
}

\setCJKmonofont{FZHei-B01}
\setCJKfallbackfamilyfont{\CJKttdefault}[]{
  [] {Sarasa Gothic SC},
  [] {Symbols Nerd Font Mono}
}
